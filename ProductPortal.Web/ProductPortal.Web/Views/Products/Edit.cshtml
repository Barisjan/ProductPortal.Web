@{
}

@model ProductPortal.Web.Models.Entities.Product


<h1>Edit Products</h1>

@if (Model is null)
    {
        <p>No product was found with this Id</p>
    }
else {
<form method="post">
    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>


    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" asp-for="Price" />
    </div>

    <div class="mt-3">
        <label class="form-label">Quantity</label>
        <input type="number" class="form-control" asp-for="StockQuantity" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        
        <button type="submit" class="btn btn-danger ms-3"
       asp-action="Delete"
       asp-controller="Products">Delete</button>
   
   
   </div>
</form>
}



